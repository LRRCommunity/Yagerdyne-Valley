# EditorConfig home page: https://editorconfig.org
# To learn more about .editorconfig see https://aka.ms/editorconfigdocs

# Indicate top-level config file
root = true

# All files
[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Data files
[*.{xml,json}]
indent_size = 2
